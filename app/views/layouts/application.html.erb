<head>
<%= javascript_include_tag :defaults %>
<%= active_scaffold_includes %>

<title><%= controller.controller_name.titleize %>: <%= controller.action_name %></title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>

<body bgcolor="#F4FFE4">
<% if flash[:notice] %>
      <div class="notice" style="background-color: #A4E7A0; border: 1px solid #26722D; margin: 1em;"><%= flash[:notice] %></div>
<% end %>
<% if logged_in? %>
     Welcome <%= current_user.username %>! Not you?
     <%= link_to "Log out", logout_path %>
   <% else %>
     <%= link_to "Sign up", signup_path %> or
     <%= link_to "log in", login_path %>.
<% end %>
<br />
<%unless controller.controller_name.titleize == "Universes"  %>
    <p>Go to:
    <%= link_to "Back to Universe selection", :controller => "universes" %> |
    <%= link_to "Characters", :controller => "characters" %> |
    <%= link_to "Events", :controller => "events" %> |
    <%= link_to "Locations", :controller => "locations" %> |
    <%= link_to "Users", :controller => "userlimits" %>
    </p>
<% end %>
